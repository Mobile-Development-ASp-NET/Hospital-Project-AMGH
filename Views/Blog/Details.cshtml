@model Hospital_Project.Models.ViewModels.DetailsBlog
@{ 
    ViewBag.Title = "Details";
}

<a href="/blog/list" class="navlink">Go back to List of Blogs</a>
<a href="/blog/edit/@Model.SelectedBlog.BlogID" class="navlink">Update</a>
<a href="/blog/DeleteConfirm/@Model.SelectedBlog.BlogID" class="dellink">Delete</a>
<div class="detailInfo">
    <div class="Blog">
        <div>Blog ID : @Model.SelectedBlog.BlogID</div>
        <div>Blog Title : @Model.SelectedBlog.Title</div>
        <div>Blog Content : @Model.SelectedBlog.Content</div>
    </div>
    <div class="relatedUsers">
        <h3>Related Subscribed Users:</h3>
        @foreach (var user in Model.ApprovedUsers)
        {
            <a href="/subscribeduser/details/@user.SubscribedUserID" style="color:blue; padding-right:1em; font-size:1.6em;">@user.Name</a>
        }

        <div>
            <h3>Approve Subscribed Users to the Blog</h3>
            <form method="POST" action="/blog/listsubscribedusersforblog/@Model.SelectedBlog.BlogID">
                <select name="SubscribedUserID">
                    @foreach (var u in Model.ApprovedUsers)
                    {
                        <option value="@u.SubscribedUserID">@u.Name</option>
                    }

                </select>
                <input type="submit" value="Approve users" />
            </form>
        </div>
    </div>
</div>

