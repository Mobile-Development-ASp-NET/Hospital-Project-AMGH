@model Hospital_Project.Models.DepartmentDto
@{
    ViewBag.Title = "DeleteConfirmation";
}

<h2>DeleteConfirmation</h2>
    <a href="/department/details/@Model.DepartmentID"> Details of Department</a>
<div class="alert alert-warning deletebox">
    <h2>Sure, want to delete ? </h2>
    <h3>@Model.DepartmentName</h3>
    <p>Discipline Description :  @Model.DepartmentDescription</p>
    <form action="/department/delete/@Model.DepartmentID" method="post">
        <input class="btn btn-danger" type="submit" value="Delete" />
    </form>
</div>


