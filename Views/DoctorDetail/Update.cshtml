@model Hospital_Project.Models.ViewModels.UpdateDoctorDetails

@{
    ViewBag.Title = "Update";
}
<a href="/DoctorDetail/Details/@Model.selectedDoctor.DrId" class="btn btn-primary">Go Back</a>
<h2>Update</h2>

<form action="/DoctorDetail/Edit/@Model.selectedDoctor.DrId" method="POST">
    <div class="form-group">
        <label for="DrFname">Doctor First Name</label>
        <input type="text" name="DrFname" class="form-control" value=" @Model.selectedDoctor.DrFname" />
    </div>
    <div class="form-group">
        <label for="DrLname">Doctor Last Name</label>
        <input type="text" name="DrLname" class="form-control" value="@Model.selectedDoctor.DrLname" />
    </div>
    <div class="form-group">
        <label for="DrBio">Doctor Bio</label>
        <input type="text" name="DrBio" class="form-control" value="@Model.selectedDoctor.DrBio">
    </div>
    <div class="form-group">
        <label for="DrEmail">Doctor Email</label>
        <input type="email" name="DrEmail" class="form-control" value="@Model.selectedDoctor.DrEmail" />
    </div>
    <div class="form-group">
        <label for="DrStudies">Doctor Studies</label>
        <input type="text" name="DrStudies" class="form-control" value="@Model.selectedDoctor.DrStudies" />
    </div>
    <div class="form-group">
        <label for="DrPosition">Doctor Position</label>
        <input type="text" name="DrPosition" class="form-control" value="@Model.selectedDoctor.DrPosition"/>
    </div>
    <div class="form-group">
        <label for="DepartmentId">Department Name</label>
        <select name="DepartmentId" class="form-control">
            @foreach (var department in Model.departmentOptions)
            {
                string selected = "";
                if (department.DepartmentID == Model.selectedDoctor.DepartmentId)
                {
                    selected = "selected";
                }
                <option value="@department.DepartmentID" @selected>@department.DepartmentName</option>
            }

        </select>
    </div>
    <input type="submit" value="Update Doctor" class="btn btn-primary" />

</form>