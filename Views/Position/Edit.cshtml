@model Hospital_Project.Models.ViewModels.UpdatePosition
@{
    ViewBag.Title = "Edit";
}

<h2>Update Postion</h2>
<nav>
    <ul>
        <li><a href="/Position/List">Back to List</a></li>
        <li><a style="color:red;" href="/Position/DeleteConfirm/@Model.SelectedPosition.PositionID">Delete</a></li>
    </ul>
</nav>
<form action="/Position/Update/@Model.SelectedPosition.PositionID" method="post">
    <div style="display:none;">
        <input type="text" name="PositionID" value="@Model.SelectedPosition.PositionID" />
    </div>
    <div>
        <label>Name:</label> <input type="text" name="PositionJob" value="@Model.SelectedPosition.PositionJob" />
    </div>
    <div>
        <label>Description:</label> <input type="text" name="PositionDescription" value="@Model.SelectedPosition.PositionDescription"/>
    </div>
    <div>
        <label>Posted Date:</label> <input type="date" name="PositionPostedDate" value="@Model.SelectedPosition.PositionPostedDate"/>
    </div>
    <div>
        <label>Application Deadline</label> <input type="date" name="ApplicationDeadLine" value="@Model.SelectedPosition.ApplicationDeadLine" />
    </div>
    <div>
        <label>Change Department Assign:</label>
        <select name="PositionID">
            @foreach (var departments in Model.DepartmentOptions)
            {
                var selected = "";
                if (departments.DepartmentID == Model.SelectedPosition.DepartmentID)
                {
                    selected = "selected";
                }
                <option value="@departments.DepartmentID" @selected>@departments.DepartmentName</option>
            }
        </select>
    </div>
    <div>
        <input type="submit" value="Update Position" />
    </div>
</form>